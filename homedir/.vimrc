" Enable syntax highlighting
syntax on

" Make tabs four spaces wide
set tabstop=2
set expandtab
"set shiftwidth=0
set shiftround

" Indentation
set autoindent
set smartindent

" Save a keypress: map semi-colon to colon
map ; :
noremap ;; ;

" Enable line numbers
set number
set relativenumber

" Don't wrap lines
set nowrap

" Always show status line
"set laststatus=2

" Show the cursor position
set ruler

" Start scrolling three lines before the horizontal window border
set scrolloff=3

" Donâ€™t show the intro message when starting Vim
set shortmess=atI

" Show matching parenthesis
set showmatch
