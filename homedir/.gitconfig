[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    last = log -1 HEAD
    stashpush = ! git stash && git push && git stash pop

[url "git@github.com:"]
    pushInsteadOf = https://github.com/

[url "git@gist.github.com:"]
    pushInsteadOf = https://gist.github.com/

[url "git@bitbucket.org:johannesmvp/"]
    pushInsteadOf = https://johannesmvp@bitbucket.org/

[color]
	ui = auto

[include]
  path = .gitconfig_local